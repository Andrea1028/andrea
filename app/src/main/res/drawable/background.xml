<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--陰影部分-->
    <!--設置陰影左邊跟上面的offset-->
    <item

        android:left="4dp"
        android:top="4dp">
        <shape
            android:layout_height="wrap_content"
            android:shape="rectangle">
            <!--設定陰影顏色-->
            <solid android:color="#40000000" />
            <!--設定圓角的尺寸-->
            <corners android:radius="14dp" />
        </shape>
    </item>
    <!--物件部分-->
    <!--設置物件右邊跟下面的offset-->
    <item

        android:bottom="4dp"
        android:right="4dp">
        <shape
            android:shape="rectangle">
            <!--設定形狀的顏色-->
            <solid
                android:color="@color/green_b3"
                />
            <!--設定圓角的尺寸-->
            <corners
                android:radius="14dp"/>
            <!--設定邊框-->
            <stroke
                android:width="0dp"
                android:color="@color/green_b2"/>
            <!--設定內容與邊界的距離-->
            <padding
                android:top="30dp"
                android:right="4dp"
                android:bottom="35dp"
                android:left="4dp"/>
        </shape>
    </item>
</layer-list>